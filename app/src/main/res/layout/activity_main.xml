<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Team_310.x_chair.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="@drawable/background"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="@string/x_chair_310"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="27dp" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lights"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/lights_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/on" />

                <Button
                    android:id="@+id/lights_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/off" />

                <Button
                    android:id="@+id/lights_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/auto" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:textAlignment="center"
                tools:ignore="UselessParent">

                <Button
                    android:id="@+id/red"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_red_light"
                    tools:ignore="ButtonStyle,UnusedAttribute" />

                <Button
                    android:id="@+id/green"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_green_light"
                    tools:ignore="ButtonStyle,UnusedAttribute" />

                <Button
                    android:id="@+id/yellow"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_orange_light"
                    tools:ignore="ButtonStyle,UnusedAttribute" />

                <Button
                    android:id="@+id/blue"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/holo_blue_light"
                    tools:ignore="ButtonStyle,UnusedAttribute" />

                <Button
                    android:id="@+id/rainbow"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/rainbow"
                    tools:ignore="ButtonStyle" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/Up"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/tableLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="89dp"
            android:text="Forward"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Left"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/Up"
            android:layout_toLeftOf="@+id/Up"
            android:text="Left"
            android:textSize="20sp"
            tools:ignore="HardcodedText,UnknownId" />

        <Button
            android:id="@+id/Down"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/Up"
            android:layout_toEndOf="@+id/Left"
            android:layout_toRightOf="@+id/Left"
            android:text="Backward"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Right"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/Up"
            android:layout_toEndOf="@+id/Down"
            android:layout_toRightOf="@+id/Down"
            android:text="Right"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/speedup"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/speeddown"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:text="@string/speed_up"
            android:textSize="20sp" />

        <Button
            android:id="@+id/speeddown"
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="17dp"
            android:text="@string/speed_down"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout2"
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@+id/speedup"
            android:layout_toStartOf="@+id/speedup"
            android:switchMinWidth="70dp"
            android:text="@string/auto_driving"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:showText="true" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

